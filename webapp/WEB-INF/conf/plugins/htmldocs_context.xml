    <bean id="htmldocs.HtmldocsPortletDAO" class="fr.paris.lutece.plugins.htmldocs.business.portlet.HtmldocsPortletDAO" />
    <bean id="htmldocs.documentPageTemplateDAO" class="fr.paris.lutece.plugins.htmldocs.business.DocumentPageTemplateDAO" />
    
     
    
    
